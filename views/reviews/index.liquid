{% layout "layout.liquid" %} 
{% block content %}
<div>
    <a href="/reviews/new"><button>Create A New Review</button></a>
    <a href="users/logout"><button>Logout</button></a>
{% for review in reviews %}
    <article>
      <a href="/reviews/{{ review._id }}">
        <h2>
          {{ review.name }} 
        </h2>
      </a>
    </article>
    {% endfor %}
  </div>
  {% endblock %}


  