{% layout "layout.liquid" %} 
{% block content %}
<div>
    <article>
        <h2> {{ review.name }} </h2>
        <h3>{{ review.content }}</h3>
        <br>
        <h4>
            {{ rating.qty }}
          </h4>
        <a href="/reviews/{{ review._id }}/edit"><button>Edit</button></a>
        <form action="/reviews/{{ review._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
        </form>
        <a href="/reviews/"><button>Back to main</button></a>
    </article>
</div>
{% endblock %}